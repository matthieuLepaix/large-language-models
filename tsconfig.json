{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./build",
    "sourceMap": true,
    "skipLibCheck": true // for tensorflow error-free compilation
  },

  "include": ["industrious-assistant/**/*"],
  "exclude": ["**/*.spec.ts"]
}
