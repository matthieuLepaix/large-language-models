{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "outDir": "./build",
    "sourceMap": true,
    "skipLibCheck": true, // for tensorflow error-free compilation,
    "resolveJsonModule": true
  },
  "include": [
    "industrious-assistant/**/*",
    "translator-assistant/**/*",
    "translator-assistant/**/*.json",
    "agents-test/**/*"
  ],
  "exclude": ["**/*.spec.ts"]
}
